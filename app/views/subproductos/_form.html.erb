<%= simple_form_for(@subproducto) do |f| %>
  <%= f.error_notification %>

    <div class="form-inputs">


      <%= f.label :producto %>
      <%= f.collection_select :producto, Producto.all, :id, :name %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :descripcion %>
      <%= f.text_area :descripcion %>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
