<%= form_for(@subproducto, :html => { :multipart => true }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

    <%= f.label "Producto al que pertenece" %>
    <%= f.collection_select :producto, Producto.order(:name), :id, :name %>


      <%= f.label :descripcion %>
      <%= f.text_area :descripcion %>

      <%= f.label :imagen %>
      <%= f.file_field :photo %>

    <%= f.label :video %>
    <%= f.text_field :video %>

    <p> ** Para el video solo copia el último código de la URL como se muestra en la imagen siguiente</p>
    <%=	 image_tag "http://adsmex.s3.amazonaws.com/videoyt.png" %>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
