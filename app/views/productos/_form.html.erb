<%= form_for(@producto, :html => { :multipart => true }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

  <div class="form-inputs">
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :descripcion %>
    <%= f.text_area :descripcion %>

    <%= f.label :imagen %>
    <%= f.file_field :photo %>

    <%= f.label :video %>
    <%= f.text_field :video %>

    <p> ** Para el video solo copia el último código de la URL como se muestra en la imagen siguiente</p>
    <%=	 image_tag "http://adsmex.s3.amazonaws.com/videoyt.png" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
